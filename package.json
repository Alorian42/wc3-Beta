{
  "name": "wc3-ts-template",
  "version": "1.0.0",
  "description": "",
  "author": "TriggerHappy",
  "license": "MIT",
  "main": "src/main.ts",
  "scripts": {
    "test": "tstl -p tsconfig.json && npm run build && node bin/operations run",
    "build": "tstl -p tsconfig.json && node bin/operations build",
    "dev": "npm-watch",
    "install": "cd src && npm install",
    "uninstall": "cd src && npm uninstall",
    "remove": "cd src && npm remove",
    "build:defs": "node bin/operations gen-defs"
  },
  "watch": {
    "build:defs": {
      "patterns": [
        "./maps/*"
      ],
      "extensions": "lua",
      "legacyWatch": true
    }
  },
  "devDependencies": {
    "@types/node": "^12.0.2",
    "lua-types": "^2.6.1",
    "war3-types": "^1.0.0",
    "npm-watch": "^0.6.0",
    "typescript-to-lua": "^0.29.1",
    "war3tstlhelper": "^1.0.0",
    "ts-transformer-imports": "^0.4.3",
    "fs-extra": "^8.1.0"
  }
}